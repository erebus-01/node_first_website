<!-- partial -->
<div class="main-panel">
  <div class="content-wrapper">
    <div class="page-header">
      <h3 class="page-title">Form edit blog</h3>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Forms</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            Form elements
          </li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Edit blog</h4>
            <form
              action="/admin/update_blog/<%= blog._id %>"
              method="post"
              class="forms-sample"
              autocomplete="off"
              enctype="multipart/form-data"
            >
              <div class="form-group">
                <label for="exampleInputInstructors">Title</label>
                <input
                  type="text"
                  class="form-control"
                  name="title"
                  id="exampleInputInstructors"
                  placeholder="Instructors"
                  value="<%= blog.title %>"
                />
              </div>
              <div class="form-group">
                <label for="exampleInputTitle">Content</label>
                <input
                  type="text"
                  class="form-control"
                  id="exampleInputTitle"
                  name="content"
                  value="<%= blog.content %>"
                  placeholder="Name"
                />
              </div>
              <div class="form-group">
                <label for="exampleInputOverview">Author</label>
                <input
                  type="text"
                  class="form-control"
                  id="exampleInputOverview"
                  name="author"
                  value="<%= blog.author %>"
                  placeholder="Overview"
                />
              </div>

              <div class="form-group">
                <label for="exampleSelectOptions"
                  >Select Collections</label
                >
                <select
                  class="form-control selectpicker"
                  for="exampleSelectOptions"
                  multiple
                  name="collections"
                  aria-label="size 3 select example"
                >
                <% categories.forEach(category => { %>
                  <option value="<%= category.tags %>"
                    <% for (let i = 0; i < blog.collections.length; i++) { %>
                      <% if ( blog.collections[i] == category.tags) { %> 
                        <%= 'selected' %> 
                      <% } %>
                    <% } %>  
                  ><%= category.tags %></option>
                <% }) %>
                </select>
              </div>
              <div class="form-group">
                <input
                  type="hidden"
                  class="form-control"
                  id="exampleInputTitle"
                  name="old_image"
                  value="<%= blog.imageBlog %>"
                  placeholder="Name"
                />
              </div>
              <div class="form-group">
                <label>Image upload</label>
                <input type="file" name="blog" class="file-upload-default" />
                <div class="input-group col-xs-12">
                  <input
                    type="text"
                    class="form-control file-upload-info"
                    disabled
                    placeholder="Upload Image"
                  />
                  <span class="input-group-append">
                    <button
                      class="file-upload-browse btn btn-primary"
                      type="button"
                    >
                      Image
                    </button>
                  </span>
                </div>
              </div>
              <div class="form-group">
                <label for="exampleTextarea1">Description</label>
                <textarea
                  class="form-control"
                  id="exampleTextarea1"
                  rows="6"
                  name="description"
                ><%= blog.description %></textarea>
              </div>
              <div class="form-group">
                <label for="exampleTextarea1">Table of Content</label>
                <textarea
                  class="form-control"
                  id="exampleTextarea1"
                  rows="12"
                  name="tableContent"
                ><% for(var i=0; i<blog.tableOfContent.length; i++) { var tags_array = blog.tableOfContent[i]; tags_array = tags_array.split(','); for(var j = 0; j < tags_array.length; j++){%><%= tags_array[j] + "\r\n" %><%}%><%}%></textarea>
              </div>

              <button type="submit" class="btn btn-primary mr-2">Submit</button>
              <button class="btn btn-dark">Cancel</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- content-wrapper ends -->
  <script>
    document.querySelectorAll("textarea").forEach((el) => {
      el.style.height = el.setAttribute(
        "style",
        "height: " + el.scrollHeight + "px"
      );
      el.classList.add("auto");
      el.addEventListener("input", (e) => {
        el.style.height = "auto";
        el.style.height = el.scrollHeight + "px";
      });
    });
  </script>
