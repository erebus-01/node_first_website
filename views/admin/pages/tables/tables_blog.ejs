            var dataString = document.querySelectorAll(".dateFormat").forEach(function(elem){
              var dateOuter = elem.outerText
              var today = new Date(dateOuter);
              var dayFormat = today.toLocaleDateString();
              elem.innerHTML = dayFormat
            });
