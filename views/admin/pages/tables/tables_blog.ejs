<style>
  .max-lines {
    display: block; /* or inline-block */
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: break-word;
    overflow: hidden;
    max-height: 4.5em;
    line-height: 1.5em;
    max-width: 100%;
  }
</style>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> Basic Tables </h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Tables</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Basic tables</li>
                </ol>
              </nav>
            </div>
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Basic Table</h4>
                    <p class="card-description"> Add class <code>.table</code>
                    </p>
                    <%- include ("../../partials/messages") %>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>Instructors</th>
                            <th>Title</th>
                            <th>Overview</th>
                            <th>Course</th>
                            <th>Status</th>
                            <th>Create Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% blogs.forEach(blog => { %>
                            <tr>
                              <td><span><%= blog.author %></span></td>
                              <td style="max-width: 200px"> <span class="max-lines"><%= blog.title %></span></td>
                              <td style="max-width: 300px"> <span class="max-lines"><%= blog.content %></span> </td>
                              <td style="max-width: 300px"> <span class="max-lines"><%= blog.description %></span> </td>
                              <td style="max-width: 300px"> <span class="max-lines"><%= blog.collections %></span> </td>
                              <td><span class="dateFormat"><%= blog.createDate %></span></td>
                              <td>
                                <a href="edit_blog/<%= blog._id %>" class="btn btn-success">Edit</a>
                                <a href="delete_blog/<%= blog._id %>" class="btn btn-danger">Delete</a>
                              </td>
                            </tr>
                          <% }) %>
                        </tbody>
                      </table>  
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          

