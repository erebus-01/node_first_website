    crossorigin="anonymous"
  ></script>

  <script>
      $(document).ready(function() {
    let id = 1;
    $(".delete").hide();
    //when the Add Field button is clicked
    $("#add").click(function(e) {
      $(".delete").fadeIn("1500");
      //Append a new row of code to the "#items" div
      $("#items").append(
        "<div class='next-referral" + id + " mb-4 next-referral' id='next-referral" + id + "'><div class='d-flex align-items-center justify-content-between py-3'><label for='tableOfContents"+id+"'>Table of contents "+ id +"</label><a href='#' class='btn btn-danger' onClick='removeFormField(\"#next-referral" + id + "\"); return false;' >Remove</a></div><div class='col-12 p-0 mb-2'><input id='textinput' name='textinput"+ id +"' type='text' placeholder='Enter name of table of contents' class='form-control input-md'></div><div class='col-12 p-0'><textarea id='textarea' name='textinput"+ id +"' rows='6' type='text' placeholder='Enter content of Table of contents' class='form-control input-md'></textarea></div></div>"
      );
    id = id - 1 + 2;
    });
    $("body").on("click", ".delete", function(e) {
      $(".next-referral").last().remove();
    });
  });

  function removeFormField(id) {  
    $(id).remove();
    console.log(id)
  }
  </script>


