<!-- partial -->
<div class="main-panel">
  <div class="content-wrapper">
    <div class="page-header">
      <h3 class="page-title">Form elements</h3>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Forms</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            Form elements
          </li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title">Basic course elements</h4>
            <form
              action="/admin/forms"
              method="post"
              class="forms-sample"
              autocomplete="off"
              enctype="multipart/form-data"
            >
              <div class="form-group">
                <label for="exampleInputInstructors">Instructors</label>
                <input
                  type="text"
                  class="form-control"
                  name="instructors"
                  id="exampleInputInstructors"
                  placeholder="Instructors"
                  required
                />
              </div>
              <div class="form-group">
                <label for="exampleInputTitle">Title</label>
                <input
                  type="text"
                  class="form-control"
                  id="exampleInputTitle"
                  name="title"
                  placeholder="Name"
                />
              </div>
              <div class="form-group">
                <label for="exampleInputOverview">Overview</label>
                <input
                  type="text"
                  class="form-control"
                  id="exampleInputOverview"
                  name="overview"
                  placeholder="Overview"
                />
              </div>

              <div class="form-group">
                <label for="exampleSelectOptions"
                  >Select Table of Content</label
                >
                <select
                  class="form-control selectpicker"
                  for="exampleSelectOptions"
                  multiple
                  name="collections"
                  aria-label="size 3 select example"
                >
                  <option value="All">All</option>
                  <option value="Performance">Performance</option>
                  <option value="Build excellent websites">
                    Build excellent websites
                  </option>
                  <option value="Frameworks">Frameworks</option>
                  <option value="Lighthouse">Lighthouse</option>
                  <option value="Explorations">Explorations</option>
                  <option value="Challenger">Challenger</option>
                </select>
              </div>
              <div class="form-group">
                <label>Image upload</label>
                <input type="file" name="course" class="file-upload-default" />
                <div class="input-group col-xs-12">
                  <input
                    type="text"
                    class="form-control file-upload-info"
                    disabled
                    placeholder="Upload Image"
                  />
                  <span class="input-group-append">
                    <button
                      class="file-upload-browse btn btn-primary"
                      type="button"
                    >
                      Image
                    </button>
                  </span>
                </div>
              </div>
              <div class="form-group">
                <label for="exampleSelectStatus">Status</label>
                <select
                  class="form-control"
                  name="status"
                  id="exampleSelectStatus"
                >
                  <option>Pending</option>
                  <option>In progress</option>
                  <option>Fixed</option>
                  <option>Completed</option>
                  <option>Demo</option>
                </select>
              </div>
              <div class="form-group">
                <label for="exampleTextarea1">Description</label>
                <textarea
                  class="form-control"
                  id="exampleTextarea1"
                  rows="6"
                  name="description"
                ></textarea>
              </div>

              <button id="add" class="btn btn-outline-primary add-more button-yellow uppercase" type="button">+ Add another Table of contents</button> 
              <button class="delete btn btn-outline-danger button-white uppercase" type="button">- Remove last Table of contents</button>
              <div id="items" class="form-group">
              </div>


              <button type="submit" class="btn btn-primary mr-2">Submit</button>
              <button class="btn btn-dark">Cancel</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- content-wrapper ends -->
  <script>
    document.querySelectorAll("textarea").forEach((el) => {
      el.style.height = el.setAttribute(
        "style",
        "height: " + el.scrollHeight + "px"
      );
      el.classList.add("auto");
      el.addEventListener("input", (e) => {
        el.style.height = "auto";
        el.style.height = el.scrollHeight + "px";
      });
    });
  </script>
