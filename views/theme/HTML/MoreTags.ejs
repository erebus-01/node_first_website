<link rel="stylesheet" href="../../assets/cssStyle/HomeStyle.css">
<link rel="stylesheet" href="../../assets/cssStyle/Blog.css">

  <main id="main">

    <div class="bg-gray">
      <div class="wrapper flow">
        <header class="region">
          <div class="wrapper">
            <div class="headline all-center">
              <% if (tagsFilter.length == 1 ) {%>
                <% tagsFilter.forEach(tag => { %>
                  <h1 class="headline-title"><%= tag.tags %></h1>
                  <p><%= tag.content %></p>
                <% }) %>
              <% } %>
              <div class="cluster flex-justify-center">
                <img src="https://web.dev/images/icons/rss.svg" class="wifi" alt="">
              </div>
            </div>
          </div>
        </header>
      </div>
    </div>
    <div class="region">
      <% if (blogs.length >= 1) {%>
        <div class="wrapper auto-grid">
          <% blogs.forEach(blog => { %>
          <article class="card">
            <a href="/blog/<%= blog._id %>">
              <img class="card__hero" src="../../uploads/blog/<%= blog.imageBlog %>" alt="">
            </a>
            <div class="card__content flow">
              <h2 class="card__heading text-size-3">
                <a href="/blog/<%= blog._id %>"><%= blog.title %></a>
              </h2>
              <p>
                <%= blog.content %>
              </p>
            </div>
            <div class="gap-top-size-1">
              <span><%= blog.author %> - Oct 31, 2022</span>
            </div>
            <div class="card__tags cluster gap-top-base">
              <% for (let i = 0; i< blog.collections.length; i++) { %>
                <% if (blog.collections[i] == filterName) { %>
                  <a href="#" class="pill text-center" style="color: #3740ff;"><%= blog.collections[i] %></a>
                <% } else { %>
                  <a href="#" class="pill text-center"><%= blog.collections[i] %></a>
                <% } %>
              <% } %>
            </div>
          </article>
          <% }) %>
        </div>
      <% } else {%>
        <div class="wrapper">
          <div class="headline all-center">
            <h1>Chưa có bài viết nào với tag này</h1>
          </div>
        </div>
      <% } %>
      <div class="wrapper gap-top-size-3">
        <nav class="pagination">
          <div class="pagination__container">
            <% if (currentPage > 1) { %>
              <a href="/blogs/<%= pageMinusOne %>" class="btn-next">Prev</a>
            <% } %>
          </div>
          <div class="pagination__status">Page <%= pagePlusOne - 1 %> of <%= totalPages %></div>
          <div class="pagination__container">
            <% if (currentPage < totalPages) { %>
              <a href="/blogs/<%= pagePlusOne %>" class="btn-next">Next</a>
            <% } %>
          </div>
        </nav>
      </div>
    </div>
    <div class="region">
      <div class="wrapper">
        <div class="cluster flex-justify-center">
          <a href="/tags/1" class="btn-next"> See more Tags </a>
        </div>
      </div>
    </div>
  </main>


